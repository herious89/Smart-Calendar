<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue3"
    tools:context=".SplashActivity" >

    
    <EditText
       	android:id="@+id/eventTitle_box"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp" 
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
      	android:longClickable="false"
        android:ems="10"
        android:hint="Title" 
        android:textSize="13dp" 
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:imeOptions="actionNext"
        android:background="@drawable/edittext_background"/>
    
    <EditText
       	android:id="@+id/eventDescription_box"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
      	android:layout_below="@+id/eventTitle_box"
        android:layout_marginLeft="10dp"  
        android:layout_marginRight="10dp"       
      	android:longClickable="false"
        android:ems="10"
        android:gravity="top"
        android:hint="Description" 
        android:textSize="13sp" 
        android:paddingLeft="5dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnDateFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDescription_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/btnFromTime"
        android:background="@drawable/custom_btn_beige"
        android:textSize="13sp" 
        android:paddingLeft="5dp"
     	android:gravity="center_vertical"/>

    <Button
        android:id="@+id/btnDateTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDateFrom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btnToTime" 
        android:background="@drawable/custom_btn_beige" 
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"/>
    
    <Button
	    android:id="@+id/btnFromTime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/btnDateFrom"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/custom_btn_beige"
	    android:textSize="13sp" />
    
	<Button
	    android:id="@+id/btnToTime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/btnDateTo"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/custom_btn_beige"
	    android:textSize="13sp" />


</RelativeLayout>